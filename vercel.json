{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "backend/groqChat.js",
      "use": "@vercel/node"
    },
    {
      "src": "templates/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/css/(.*)",
      "dest": "/templates/css/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/templates/images/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/templates/js/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/templates/index.html"
    }
  ]
}
